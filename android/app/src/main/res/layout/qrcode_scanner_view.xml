<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".core.nativepackage.qrcode.view.scanner.QRCodeScannerActivity"
    android:id="@+id/camera_layout"
    >

    <androidx.camera.view.PreviewView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QRcode here"
        android:textColor="@color/BLACK_01"
        android:textStyle="bold"
        android:textSize="24sp"
        android:translationZ="90dp"
        />

<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginHorizontal="24dp"-->
<!--        android:layout_centerVertical="true"-->
<!--        android:src="@drawable/frame_scan_qrcode" />-->


    <ImageView
        android:id="@+id/bt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/bt_back_style"
        android:src="@drawable/ic_close_white"
        android:translationZ="90dp"
        />


</RelativeLayout>